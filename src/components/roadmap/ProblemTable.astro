---
interface Props {
  problems: {
    id: string
    title: string
    score?: string
    url?: string
    vip?: boolean
  }[]
}

const { problems } = Astro.props

function getDifficultyColor(score: string | undefined) {
  if (!score) return 'text-gray-500 bg-gray-100 dark:bg-gray-800'
  const s = parseInt(score)
  if (isNaN(s)) return 'text-gray-500 bg-gray-100 dark:bg-gray-800'
  if (s < 1400) return 'text-green-600 bg-green-100 dark:bg-green-900/30 dark:text-green-400'
  if (s < 1900) return 'text-yellow-600 bg-yellow-100 dark:bg-yellow-900/30 dark:text-yellow-400'
  return 'text-red-600 bg-red-100 dark:bg-red-900/30 dark:text-red-400'
}
---

<div class='flex flex-col w-full rounded-xl border border-border bg-card overflow-hidden shadow-sm'>
  <!-- Header -->
  <div
    class='flex items-center border-b border-border bg-muted/40 px-4 py-3 text-xs font-medium uppercase tracking-wider text-muted-foreground'
  >
    <div class='w-16 text-center'>ID</div>
    <div class='flex-1 px-4'>Problem</div>
    <div class='w-24 text-center'>Score</div>
  </div>

  <!-- Rows -->
  <div class='divide-y divide-border'>
    {
      problems.map((problem) => (
        <div class='group flex items-center px-4 py-3 hover:bg-muted/50 transition-colors'>
          <div class='w-12 flex justify-center'>
            <input
              type='checkbox'
              class='prob-check h-5 w-5 rounded border-2 border-muted-foreground bg-card text-primary focus:ring-primary/20 focus:ring-offset-0 transition-all cursor-pointer hover:border-primary hover:bg-primary/5 checked:border-primary checked:bg-primary'
              data-id={problem.id}
            />
          </div>
          <div class='w-16 text-center text-sm font-mono text-muted-foreground'>
            {problem.id}
          </div>
          <div class='flex-1 px-4 min-w-0'>
            <a
              href={problem.url || `https://leetcode.cn/problemset/?search=${problem.id}`}
              target='_blank'
              class='block truncate text-sm font-medium text-foreground hover:text-primary transition-colors'
            >
              {problem.title}
              {problem.vip && (
                <span class='ml-2 inline-flex items-center rounded-full bg-amber-100 px-2 py-0.5 text-xs font-medium text-amber-800 dark:bg-amber-900/30 dark:text-amber-400'>
                  VIP
                </span>
              )}
            </a>
          </div>
          <div class='w-24 flex justify-center'>
            <span
              class={`inline-flex items-center justify-center rounded-full px-2.5 py-0.5 text-xs font-medium ${getDifficultyColor(problem.score)}`}
            >
              {problem.score || '-'}
            </span>
          </div>
        </div>
      ))
    }
  </div>
</div>

<style>
  /* Custom Checkbox Checkmark */
  input[type='checkbox'] {
    appearance: none;
    position: relative;
  }
  input[type='checkbox']:checked::after {
    content: '';
    position: absolute;
    left: 50%;
    top: 45%;
    width: 5px;
    height: 9px;
    border: solid white;
    border-width: 0 2px 2px 0;
    transform: translate(-50%, -50%) rotate(45deg);
  }
</style>

<script>
  import { getProblemProgress, updateProblemStatus } from '@/lib/supabaseClient'

  // 页面加载时，从 Supabase 加载进度并更新 checkbox 状态
  async function loadProgress() {
    const progressMap = await getProblemProgress()
    
    // 更新所有 checkbox 的状态
    const checkboxes = document.querySelectorAll<HTMLInputElement>('.prob-check')
    checkboxes.forEach((checkbox) => {
      const problemId = checkbox.dataset.id
      if (problemId && progressMap.has(problemId)) {
        checkbox.checked = progressMap.get(problemId) || false
      }
    })
  }

  // 当 checkbox 状态改变时，保存到 Supabase
  function setupCheckboxListeners() {
    const checkboxes = document.querySelectorAll<HTMLInputElement>('.prob-check')
    
    checkboxes.forEach((checkbox) => {
      checkbox.addEventListener('change', async (event) => {
        const target = event.target as HTMLInputElement
        const problemId = target.dataset.id
        
        if (problemId) {
          const completed = target.checked
          const success = await updateProblemStatus(problemId, completed)
          
          if (!success) {
            console.warn(`Failed to update status for problem ${problemId}`)
            // 可选：回滚 checkbox 状态
            // target.checked = !completed
          } else {
            // 触发自定义事件，通知 ProgressStats 组件更新
            document.dispatchEvent(new CustomEvent('problem-status-changed'))
          }
        }
      })
    })
  }

  // 页面加载完成后初始化
  document.addEventListener('DOMContentLoaded', async () => {
    await loadProgress()
    setupCheckboxListeners()
  })
</script>

