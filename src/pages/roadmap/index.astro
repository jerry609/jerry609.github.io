  { id: 'tries', x: 180, y: 420 },
  { id: 'backtracking', x: 520, y: 420 },
  { id: 'heap', x: 80, y: 520 },
  { id: 'graphs', x: 350, y: 520 },
  { id: '1d-dp', x: 620, y: 520 },
  { id: 'intervals', x: 50, y: 620 },
  { id: 'greedy', x: 200, y: 620 },
  { id: 'advanced-graphs', x: 350, y: 620 },
