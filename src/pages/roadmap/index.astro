  .node-box text { fill: #fff; font-size: 12px; font-weight: 600; text-anchor: middle; pointer-events: none; }
  .node-box:hover rect { fill: #4f46e5; stroke: #818cf8; filter: drop-shadow(0 6px 8px rgba(0,0,0,0.4)); }

  .modal { position: fixed; inset: 0; background: rgba(0,0,0,0.85); display: flex; align-items: center; justify-content: center; z-index: 50; backdrop-filter: blur(4px); }
  .modal.hidden { display: none; }
  
  @keyframes modalIn { from { opacity: 0; transform: scale(0.95); } to { opacity: 1; transform: scale(1); } }
  .modal-inner { 
    background: #0f172a; 
    color: #e2e8f0; 
    border-radius: 1rem; 
    width: min(900px, 95%); 
    max-height: 90vh; 
    overflow-y: auto; 
    padding: 2rem; 
    position: relative; 
    border: 1px solid #1e293b;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    animation: modalIn 0.2s ease-out;
  }

  .close-btn { 
    position: absolute; top: 1rem; right: 1rem; 
    width: 2rem; height: 2rem; 
    border-radius: 50%; 
    border: 1px solid #334155; 
    background: #1e293b; 
    color: #94a3b8; 
    display: flex; align-items: center; justify-content: center;
    cursor: pointer; transition: all 0.2s;
  }
  .close-btn:hover { background: #334155; color: #fff; border-color: #475569; }
  
  .modal-inner h2 { text-align: center; font-size: 1.5rem; margin-bottom: 0.5rem; font-weight: 700; color: #f8fafc; }
  .count-text { text-align: center; color: #94a3b8; margin-bottom: 1rem; font-variant-numeric: tabular-nums; }
  
  .bar-track { height: 8px; background: #1e293b; border-radius: 4px; margin-bottom: 1.5rem; overflow: hidden; }
  .bar-fill { height: 100%; width: 0; background: #22c55e; border-radius: 4px; transition: width 0.5s cubic-bezier(0.4, 0, 0.2, 1); }
  
  .prereq-box { display: flex; flex-wrap: wrap; gap: 0.75rem; margin-bottom: 1.5rem; justify-content: center; }
  .prereq-card { background: #1e293b; padding: 0.5rem 1rem; border-radius: 0.5rem; border: 1px solid #334155; font-size: 0.9rem; }
  .prereq-card b { display: block; color: #60a5fa; margin-bottom: 0.1rem; }
  .prereq-card small { color: #94a3b8; }
  
  .prob-table { width: 100%; border-collapse: collapse; font-size: 0.95rem; }
  .prob-table th { text-align: left; padding: 0.75rem; color: #64748b; font-weight: 600; border-bottom: 1px solid #334155; }
  .prob-table td { padding: 0.75rem; border-bottom: 1px solid #1e293b; color: #cbd5e1; }
  .prob-table tr:last-child td { border-bottom: none; }
  .prob-table tr:hover td { background: #1e293b; }
  
  .star { color: #475569; width: 24px; }
  .star svg { width: 16px; height: 16px; }
  
  .prob-table a { color: #60a5fa; text-decoration: none; transition: color 0.2s; }
  .prob-table a:hover { color: #93c5fd; text-decoration: underline; }
  
  .diff { font-size: 0.75rem; font-weight: 700; padding: 0.2rem 0.5rem; border-radius: 0.25rem; display: inline-block; }
  .diff-easy { color: #22c55e; background: rgba(34, 197, 94, 0.1); }
  .diff-medium { color: #eab308; background: rgba(234, 179, 8, 0.1); }
  .diff-hard { color: #ef4444; background: rgba(239, 68, 68, 0.1); }
  
  /* Custom Checkbox */
  input[type='checkbox'] {
    appearance: none;
    width: 1.2rem; height: 1.2rem;
    border: 2px solid #475569;
    border-radius: 4px;
    background: #0f172a;
    cursor: pointer;
    position: relative;
    transition: all 0.2s;
  }
  input[type='checkbox']:checked {
    background: #22c55e;
    border-color: #22c55e;
  }
  input[type='checkbox']:checked::after {
    content: '';
    position: absolute;
    left: 4px; top: 1px;
    width: 5px; height: 10px;
    border: solid white;
    border-width: 0 2px 2px 0;
    transform: rotate(45deg);
  }
</style>
