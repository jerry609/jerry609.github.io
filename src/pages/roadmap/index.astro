          const b = nodes.find(n => n.id === to)
          if (!a || !b) return null
          const rectW = 180, rectH = 64
          const x1 = a.x + rectW / 2, y1 = a.y + rectH / 2
          const x2 = b.x + rectW / 2, y2 = b.y
          const cy = (y1 + y2) / 2
          return <path d={`M${x1} ${y1} C${x1} ${cy}, ${x2} ${cy}, ${x2} ${y2}`} class='edge-line' />
        })}
