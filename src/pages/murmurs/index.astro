---
import { getCollection, render } from 'astro:content'
import { Image } from 'astro:assets'
import PageLayout from '@/layouts/CommonPage.astro'


const murmursEntries = await getCollection('murmurs', ({ data }) => !data.draft)
const sortedMurmurs = murmursEntries.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())

const renderedMurmurs = await Promise.all(sortedMurmurs.map(async (entry) => {
  const { Content } = await render(entry)
  // Extract a brief summary from the body if description is missing
  const summary = entry.body?.slice(0, 100).replace(/[#*`]/g, '') + '...'
  return { entry, Content, summary }
}))
---

<PageLayout title='Murmurs'>
  <div class='max-w-[1200px] mx-auto px-4 py-8'>
    <!-- Header -->
    <div class='text-center mb-12'>
      <h1 class='text-4xl font-bold mb-4 bg-clip-text text-transparent bg-gradient-to-r from-primary to-primary/60'>
        过往与夕
      </h1>
      <p class='text-muted-foreground'>记录生活中的片刻感悟</p>
    </div>

    <!-- Grid Layout -->
    <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6'>
      {renderedMurmurs.map(({ entry, summary }, index) => (
        <a 
          href={`/murmurs/${entry.id}`}
          class='group flex flex-col bg-card border border-border rounded-xl overflow-hidden hover:shadow-lg transition-all duration-300 hover:-translate-y-1'
          style={`animation: fade-up 0.5s ease-out backwards ${index * 100}ms`}
        >
          <!-- Cover Image -->
          {entry.data.cover && (
            <div class='relative aspect-[16/10] overflow-hidden bg-muted'>
              <Image 
                src={entry.data.cover} 
                alt={entry.data.title || 'Cover'} 
                class='w-full h-full object-cover transition-transform duration-500 group-hover:scale-105'
                width={600}
                height={400}
              />
            </div>
          )}

          <!-- Content -->
          <div class='flex flex-col flex-1 p-5'>
            <div class='flex items-center justify-between text-xs mb-3'>
              <time datetime={entry.data.publishDate.toISOString()} class='text-muted-foreground/60 font-mono'>
                {entry.data.publishDate.toLocaleDateString('zh-CN', { year: 'numeric', month: '2-digit', day: '2-digit' })}
              </time>
              {entry.data.tags.length > 0 && (
                <span class='text-primary/80 bg-primary/5 px-2 py-0.5 rounded text-[11px] font-medium'>
                  #{entry.data.tags[0]}
                </span>
              )}
            </div>

            <h2 class='text-lg font-bold mb-3 leading-snug group-hover:text-primary transition-colors line-clamp-2'>
              {entry.data.title || '无题'}
            </h2>

            <p class='text-sm text-muted-foreground line-clamp-3 leading-relaxed'>
              {summary}
            </p>
          </div>
        </a>
      ))}
    </div>
  </div>
</PageLayout>

<style>
  @keyframes fade-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
