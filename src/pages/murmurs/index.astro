---
import { getCollection, render } from 'astro:content'
import { Image } from 'astro:assets'
import PageLayout from '@/layouts/CommonPage.astro'


const murmursEntries = await getCollection('murmurs', ({ data }) => !data.draft)
const sortedMurmurs = murmursEntries.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())

const renderedMurmurs = await Promise.all(sortedMurmurs.map(async (entry) => {
  const { Content } = await render(entry)
  // Extract a brief summary from the body if description is missing
  const summary = entry.body?.slice(0, 100).replace(/[#*`]/g, '') + '...'
  return { entry, Content, summary }
}))
---

<PageLayout title='Murmurs'>
  <div class='max-w-[1200px] mx-auto px-4 py-8'>
    <!-- Header -->
    <div class='text-center mb-12'>
      <h1 class='text-4xl font-bold mb-4 bg-clip-text text-transparent bg-gradient-to-r from-primary to-primary/60'>
        过往与夕
      </h1>
      <p class='text-muted-foreground'>记录生活中的片刻感悟</p>
    </div>

    <!-- Grid Layout -->
    <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6'>
      {renderedMurmurs.map(({ entry, summary }, index) => (
        <a 
          href={`/murmurs/${entry.id}`}
          class='group flex flex-col bg-card border border-border rounded-xl overflow-hidden hover:shadow-lg transition-all duration-300 hover:-translate-y-1'
          style={`animation: fade-up 0.5s ease-out backwards ${index * 100}ms`}
        >
          <!-- Cover Image -->
          <div class='relative aspect-[16/10] overflow-hidden bg-muted'>
            {entry.data.cover ? (
              <Image 
                src={entry.data.cover} 
                alt={entry.data.title || 'Cover'} 
                class='w-full h-full object-cover transition-transform duration-500 group-hover:scale-105'
                width={600}
                height={400}
              />
            ) : (
              <div class='w-full h-full flex items-center justify-center bg-gradient-to-br from-primary/5 to-primary/10 text-primary/20'>
                <svg class="w-12 h-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
            )}
            
            <!-- Tags Overlay -->
            {entry.data.tags.length > 0 && (
              <div class='absolute top-3 left-3 flex flex-wrap gap-2'>
                {entry.data.tags.map(tag => (
                  <span class='px-2 py-1 text-xs font-medium bg-black/50 text-white backdrop-blur-sm rounded-md'>
                    #{tag}
                  </span>
                ))}
              </div>
            )}
          </div>

          <!-- Content -->
          <div class='flex flex-col flex-1 p-5'>
            <div class='flex items-center gap-2 text-xs text-muted-foreground mb-3'>
              <span>人间游记</span>
              {entry.data.tags.length > 0 && <span>·</span>}
              {entry.data.tags.length > 0 && <span class='text-primary'>#{entry.data.tags[0]}</span>}
            </div>

            <h2 class='text-xl font-bold mb-3 line-clamp-2 group-hover:text-primary transition-colors'>
              {entry.data.title || entry.data.publishDate.toLocaleDateString('zh-CN')}
            </h2>

            <p class='text-sm text-muted-foreground line-clamp-3 mb-4 flex-1 leading-relaxed'>
              {summary}
            </p>

            <!-- Footer -->
            <div class='flex items-center justify-between pt-4 border-t border-border/50 mt-auto'>
              <div class='flex items-center gap-2'>
                <div class='w-6 h-6 rounded-full bg-primary/10 flex items-center justify-center text-xs text-primary font-bold'>
                  J
                </div>
                <span class='text-xs text-muted-foreground font-medium'>Jerry</span>
              </div>
              <time class='text-xs text-muted-foreground'>
                {entry.data.publishDate.toLocaleDateString('zh-CN', { year: 'numeric', month: '2-digit', day: '2-digit' })}
              </time>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</PageLayout>

<style>
  @keyframes fade-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
