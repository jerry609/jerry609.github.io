    </div>

    <!-- Murmurs List -->
    <div class='murmurs-list'>
      {renderedMurmurs.map(({ entry, Content }, index) => (
        <article 
          class='murmur-card'
          style={`animation-delay: ${index * 80}ms`}
        >
          <div class='card-date'>
            <span class='date-day'>{entry.data.publishDate.getDate()}</span>
            <span class='date-month'>
              {entry.data.publishDate.toLocaleDateString('zh-CN', { month: 'short' })}
            </span>
            <span class='date-year'>{entry.data.publishDate.getFullYear()}</span>
          </div>
          
          <div class='card-content'>
            <div class='card-weekday'>
              {entry.data.publishDate.toLocaleDateString('zh-CN', { weekday: 'long' })}
            </div>
            <div class='card-body prose dark:prose-invert'>
              <Content />
            </div>
          </div>
        </article>
      ))}
    </div>

